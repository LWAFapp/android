<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/username_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/username"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/plain_message_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingStart="5sp"
            android:text="@string/plain_message"
            android:textAlignment="viewStart" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/replyLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="10sp"
            android:visibility="gone">

            <View
                android:id="@+id/replyLine"
                android:layout_width="2sp"
                android:layout_height="match_parent"
                android:layout_below="@id/replyContentMessage"
                android:background="@android:color/white"
                android:visibility="visible"></View>

            <LinearLayout
                android:id="@+id/replyContentMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="10sp">

                <TextView
                    android:id="@+id/replyUsernameMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="5sp"
                    android:text="@string/username"
                    android:textStyle="bold"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/replyTextMessage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingStart="5sp"
                    android:text="@string/plain_message"
                    android:textAlignment="viewStart"
                    android:visibility="visible" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/message_datetime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="01/01/77 00:00"
                android:textColor="#979797"
                android:textSize="11sp"
                android:visibility="visible" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>