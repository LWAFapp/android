<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background"
    tools:context=".WelcomeActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400sp"
        android:gravity="center"
        android:orientation="vertical">
        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/shimmerLogo"
            app:shimmer_base_alpha="0.7"
            app:shimmer_auto_start="true"
            app:shimmer_highlight_color="@color/hint"
            app:shimmer_duration="2000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textColor="#FFFFFF"
                android:textSize="70sp"
                android:textStyle="bold" />
        </com.facebook.shimmer.ShimmerFrameLayout>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_lozung"
            android:textColor="#FFFFFF"
            android:textSize="30sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rectangle"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="25sp">

        <com.google.android.material.button.MaterialButton
            style="@style/Widget.Material3.Button"
            android:padding="10dp"
            app:strokeColor="@color/white"
            android:id="@+id/buttonLogIn3"
            android:layout_width="250sp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:onClick="onRegistration"
            android:text="@string/registration"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="24sp"/>

        <com.google.android.material.button.MaterialButton
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:padding="10dp"
            app:strokeColor="@color/white"
            app:strokeWidth="3sp"
            android:id="@+id/buttonLogIn2"
            android:layout_width="250sp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:onClick="onLogin"
            android:text="@string/login"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />

        <com.google.android.material.button.MaterialButton
            style="@style/Widget.Material3.Button.IconButton"
            android:padding="10dp"
            android:id="@+id/buttonLogInVK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:iconSize="52dp"
            android:insetBottom="0dp"
            app:icon="@drawable/vk_icon_transparent"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:iconTint="@null"/>

    </LinearLayout>
</androidx.appcompat.widget.LinearLayoutCompat>