<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LWAF" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Customize your theme here. -->
    </style>
    <!-- Base application theme. -->
    <style name="Base.Theme.LWAF" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">#F34E6E</item>
        <item name="android:textColorHint">@color/hint</item>
        <item name="android:textColor">@color/white</item>
        <item name="windowNoTitle">true</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:listViewStyle">@style/AppTheme.ListViewStyle</item>
    </style>
    <style name="AppTheme.ListViewStyle" parent="@android:style/Widget.ListView">
        <item name="android:background">@null</item>
    </style>
    <style name="EditTextTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Used for the bottom line when not selected / focused -->
        <item name="colorControlNormal">#000000</item>
        <item name="colorControlActivated">#000000</item>
        <item name="colorControlHighlight">#000000</item>
    </style>
</resources>